//
// Modal - Pure CSS (no JavaScript)
// ===================================================

.modal  

  // Button Close
  .btn-close  
    color $gray-light 
    cursor pointer 
    font-size 3.0rem 
    position absolute  
    top 0 
    right 5px  
    text-decoration none 

    &:hover,
    &:focus
       color darken($gray-light, 10%) 
       

// Modal Wrap
// -------------------------------------------------- 

.modal-wrap  

  // Modal Background
  &:before  
    content '' 
    display none 
    background alpha(#000, 60%) 
    position fixed 
    top 0  
    right 0  
    bottom 0
    left 0   
    z-index 101 
    

// Modal Overlay
// -------------------------------------------------- 

.modal-overlay  
  display none 
  position fixed 
  top 0 
  right 0 
  bottom 0 
  left 0 
  z-index 102 
 

// Modal Open
// -------------------------------------------------- 

.modal-open:checked ~ .modal-wrap  

  // Active animate in modal
  &:before,
  & .modal-overlay  
    display block 

  .modal-dialog  
    transform translate(-50%,-50%) 
    position fixed
    top 40% 
 

// Modal Dialog
// -------------------------------------------------- 

.modal-dialog  
  background #fefefe 
  border $gray solid 1px 
  border-radius 5px 
  position fixed 
  left 50% 
  top -100% 
  transform translate(-50%,-150%) 
  transition transform .6s ease-in-out
  width 80% 
  max-width 600px 
  z-index 103 
  

.modal-body  
  padding $space 
  
  p  
    margin 0 
    

.modal-header,
.modal-footer  
  padding $space $space 
 

.modal-header  
  border-bottom $gray-lighter solid 1px 

  h2  
    font-size 2.0rem 
    margin 0 
   
 
.modal-footer  
  border-top $gray-lighter solid 1px 
  text-align right 
 
